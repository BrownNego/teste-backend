<div class="card mt-5 " style="width: 50rem;">
    <div class="card-body">
        <h5 class="card-title">Cadastro de Clientes</h5>
        <form name='form1' action="controllerForm" method="POST">
            <div class="row">
                <input type="hidden" name="id" id="id" placeholder="Id:">
                <div class="col">
                    <input type="text" name="Nome" id="nome" placeholder="Nome:">
                </div>
                <div class="col">
                    <input type="text" name="Email" id="email" placeholder="Email: ">
                </div>
                <div>
                    <Select name="Sexo" id="sexo">
                        <option>Sexo</option>
                        <option value="M">M</option>
                        <option value="F">F</option>
                    </Select>
                </div>
                <div class="col">
                    <input type="submit" name="btnSubmit" id="btnSubmit" placeholder="Add">
                </div>

            </div>

        </form>
    </div>

</div>